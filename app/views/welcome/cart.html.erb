<%= form_with(model: @order, local: true) do |form| %>


<h1 class="title_edit">dinnerdash</h1>
<% if user_signed_in? %>
  <h1 class="user_edit">Bem-vindo, <strong><%= current_user.name %></strong>.</h1>
  <h2 class="subtitle">Neste espaço você pode finalizar seu pedido.</h2>
  <%= link_to 'Perfil', edit_user_registration_path, :class => 'perfil_edit text-white' %>
  <%= link_to "Sair", destroy_user_session_path, method: :delete, :class => 'logout_edit text-white'  %>
  <% if current_user.admin? %>
    <%= link_to "Ir para backoffice", "/orders", class: "btn btn-success intro4"   %>
  <% end %>
<% else %>
  <div class="welcomeButtonsEdit">
    <%= link_to "entrar", new_user_session_path, class: "text-white" %>
    <%= link_to "cadastro", new_user_registration_path, class: "text-white" %>
  </div>
  <h1 class="user_edit">Monte o seu prato</h1>
  <h2 class="subtitle">Escolha sua salada, molho, prato principal, guarnição e bebida</h2>
<% end %>


<body class ="fundoCart">
    <div class="log4">
        <div class="tablecss">  
            <h3 class="text-secondary">O seu pedido:</h3>
            <p class="text-black-50">Confira os itens pedidos antes de finalizar o pedido</p>
            <br>

            <div class="tablecss">
      <div class="form-row col">
      	<% @meals.each do |meal| %>
          <% if meal.avaible  == '1' %>
            <div class="card" style="width: 18rem;">
              <div class="card-body">
                <% if meal.image.attached? %>
            		  <%= image_tag(meal.image, class: "card-img-top mealSize")%>
							  <% else %>
								  <img src="/images/Generico.jpg", class="card-img-top mealSize">
							  <% end %>
                <div class="card-header bg-dark text-white">
                  <%=meal.name%>
                </div>
                <% if meal.avaible  == '0' %>
                  <h7 class="card-text text-secondary">Refeição indisponível</h7>
                  <br>
                <% end %>
                <h7 class="card-text text-secondary"><%= meal.description %></h7>
                <br>
                <h5 class="card-text text-success">R$ <%= meal.price%>,00 por porção</h5>              
              </div>
              <div class="card-body">
                <h6 class="card-text text-secondary">Quantidade</h6>
                <select class="custom-select">
                  <option selected>1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>
                  <option value="6">6</option>
                  <option value="7">7</option>
                  <option value="8">8</option>
                  <option value="9">9</option>
                  <option value="10">10</option>
                </select>
                <br>
                <br>
                <button type="button" class="btn btn-success text-white welcomeAddButton">adicionar ao meu prato</button>
              </div>
            </div>
          <% end %>
      	<% end %>
    	</div>
  	</div>



            <div class="form-row">
                <div class="col">
                    <h3 class="text-secondary">Esqueceu algo?</h3>
                    <%= link_to "Clique aqui para retornar ao menu", "/", class: "text-black" %>
                </div>  
                <div class="col">
                    <h3 class="text-secondary">Preço total do pedido:</h3>
                    <%= form.submit "finalizar e pagar", class:"btn btn-success intro5 active"  %>(nao funciona)
                </div>  
            </div>
        </div>

        <div class = "tablecss">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Pedido de nº</th>
              <th scope="col">Status</th>
              <th scope="col">Data</th>
              <th scope="col">Preço Total</th>
              <th scope="col" colspan="5">Detalhes</th>
            </tr>
          </thead>

          <tbody>
            <% @orders.each do |order| %>
            <%if current_user.id == order.User_id%>
              <tr>
                <td scope="row"><%= order.id %></td>
                <%   if order.Situation_id == 1 %>
                  <td class="bg-primary text-white">entregue</td>
                <%end%>
                <%   if order.Situation_id == 2 %>
                  <td class="bg-success text-white">pendente</td>
                <%end%>
                <%   if order.Situation_id == 3 %>
                  <td class="bg-danger text-white">cancelado</td>
                <%end%>
                <%#= order.Situation_id %>
                <td><%=order.created_at.strftime("%d/%m/%Y")%></td>
                <td><%= order.price %></td>
                <td><%= link_to 'ver itens pedidos', order_meals_url,confirm: 'Are you sure?', class:"text-primary font2" %></td>
              </tr>
            <% end %>
            <% end %>
          </tbody>
        </table>
        </div>
    </div>
</body>

<% end %>